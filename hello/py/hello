#!/usr/bin/env python3
import time as t
import skilstak.colors as c
def plain(message):
    print(c.cl + c.rc() + message + c.x)

def multi(message):
    while True:
        print(c.clear + c.multi(message))
        t.sleep(0.5)
def color(message):
    print(c.cl)
    while True:
        print(c.rc() + message + c.reset, end = " "


